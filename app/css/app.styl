// Example Stylus file
// All changes are detected and automatically compiled into CSS

@import 'normalize'
@import 'helpers'

// Main

body, html
  height 100%

body
  font normal 12pt sans-serif
  line-height: 16pt
  text-align left
  background-color: #F0F0F0

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #0057c5
  text-shadow 1px 1px 2px white

#header
  background-color #0264a2
  border-bottom 1px solid #B2B2B2
  box-shadow(0px 1px 5px #B2B2B2)
  .logo
    display: block
    padding: 0.5em

#session

#sharenotes
  text-align: center

#content
  text-align: left
  margin: 0 auto
  position: relative
  width: 60em
  border: 1px solid pink

#main
  margin-left: 15em
  border: 1px solid brown
  
#sidebar
  border: 1px solid red
  position: absolute
  top: 0em
  left: 0em
  width: 15em

  ul
    background-color: white
    z-index: 100
    list-style-type: none
    width: 100%
    padding: 0
    li
      line-height: 1.5
      border-bottom 1pt solid grey
    li:hover
      background-color: red

li.active
  background-color: red