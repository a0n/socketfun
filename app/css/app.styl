// Example Stylus file
// All changes are detected and automatically compiled into CSS

@import 'normalize'
@import 'helpers'

// Main

body, html
  height 100%

body
  font normal 12pt sans-serif
  line-height 16pt
  text-align left
  background-color #F0F0F0
  font-family "Arial"

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #0057c5
  text-shadow 1px 1px 2px white

#header
  background-color #0264a2
  border-bottom 1px solid #B2B2B2
  box-shadow(0px 1px 5px #B2B2B2)
  .logo
    display block
    padding 0.5em
  .logout
    position absolute
    top 0.5em
    right 0.5em
  

#session

#sharenotes
  text-align center

#content
  text-align left
  margin 0 auto
  position relative
  width 60em

#main
  margin-left 15em
  
#sidebar
  position absolute
  top 0em
  left 0em
  width 15em

  ul
    box-shadow(0px 0px 5px #ccc)
    background-color white
    z-index 100
    list-style-type none
    padding 0
    margin 0
    li
      padding 0.25em 1em
      font-size 0.9em
      border-bottom 1pt solid #dfdfdf
      cursor pointer
      color: #333
    li.active
      color white
      background-color #a6261b
    li.active:hover
      color: white
      background-color #a6261b
    li:hover
      color black
      background-color: #fcfcfc

li.active
  color white
  background-color #a6261b